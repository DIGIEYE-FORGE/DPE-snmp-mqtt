{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "ts-node",
        "type": "node",
        "request": "launch",
        "args": [
            "${relativeFile}"
        ],
        "runtimeArgs": [
            "-r",
            "ts-node/register"
        ],
        "cwd": "${workspaceRoot}/src/index.ts",
        "protocol": "inspector",
        "internalConsoleOptions": "openOnSessionStart"
    }]
}